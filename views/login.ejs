<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.css" media="screen,projection" />
  <link type="text/css" rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
  <% if (!signup) { %>
  <form id="loginForm" action="/login" method="post">
  <% } %>
  <% if (signup) { %>
  <form id="loginForm" action="/signup" method="post">
  <% } %>
    <div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
      <div class="valign" style="width:100%;">
        <div class="container">
          <div class="row">
            <div class="col s12 m6 offset-m3">
              <div class="card blue-grey darken-1 z-depth-3">
                <div class="card-content white-text">
                  <div class="row">
                    <% if (!signup) { %>
                    <div class="col s5"><span class="card-title">Login</span></div>
                    <div class="col s2 right"><a href="/signup" class="btn red waves-effect waves-light" title="Signup"><i class="material-icons">person_add</i> Signup</a></div>
                    <% } %>
                    <% if (signup) { %>
                    <div class="col s12 center"><span class="card-title white-text">Signup</span></div>
                    <% } %>
                  </div>
                  <% if (message.length > 0) { %>
                  <div class="card-panel red lighten-4 red-text center"><%= message %></div>
                  <% } %>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">account_circle</i>
                      <input id="username" name="username" type="text" class="validate" required autofocus
                        oninput="this.setCustomValidity('')"
                        oninvalid="this.setCustomValidity('Please enter your username!!')"/>
                      <label for="username" class="active">User Name</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">security</i>
                      <input id="password" name="password" type="password" class="validate" required
                        oninput="this.setCustomValidity('')"
                        oninvalid="this.setCustomValidity('Please enter your password!!')">
                      <label for="password" class="active">Password</label>
                    </div>
                  </div>
                  <% if (signup) { %>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">format_color_text</i>
                      <input id="displayname" name="displayname" type="text" class="validate" required
                        oninput="this.setCustomValidity('')"
                        oninvalid="this.setCustomValidity('Please enter display name!!')">
                      <label for="displayname" class="active">Display Name</label>
                    </div>
                  </div>
                  <% } %>
                </div>
                <div class="card-action center">
                  <% if (!signup) { %>
                  <button class="btn waves-effect waves-light green lighten-1" type="submit" name="login">
                    Login<i class="material-icons right">lock_open</i>
                  </button>
                  <a href="/auth/facebook" class="btn waves-effect waves-light blue darken-1">
                    <span class="fa fa-facebook"></span> Facebook</a>
                  <a href="/auth/google" class="btn waves-effect waves-light red lighten-1">
                    <span class="fa fa-google-plus"></span> Google</a>
                  <% } %>
                  <% if (signup) { %>
                  <button class="btn waves-effect waves-light green lighten-1" type="submit" id="signup" name="signup">Signup
                        <i class="material-icons right">person_add</i>
                      </button>
                  <a href="/" class="btn waves-effect waves-light orange lighten-1">
                          Cancel<i class="material-icons right">arrow_back</i></a>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
  <!--JavaScript at end of body for optimized loading-->
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.js"></script>
  <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.js"></script>
</body>

</html>